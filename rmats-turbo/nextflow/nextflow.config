manifest {
  author = "Chunjie Liu"
  homePage = "https://github.com/chunjie-sam-liu/rmats-turbo-nf"
  mainScript = "rmatsTurbo.nf"
}

params {
  // input bam files
  bam_g1 = false
  bam_g2 = false

  // reference
  gtf = false

  is_single_end = false
  readLength = false
  nthread = 1

  out_dir = false
  lib_type = "fr-unstranded"
  variable_read_length = false
  anchorLength = false

  tstat = 1
  cstat = "0.0001"
  statoff = false
  paired_stats  = false
  darts_model = false
  darts_cutoff = "0.05"

  novelSS = false
  mil = 50
  mel = 500
  allow_clipping = false
  individual_counts = false


  machine_mem_gb = 4
  disk_space_gb = 20
  use_ssd = false

  rmats_version = "v4.3.0"
  container = "xinglab/rmats:${rmats_version}"


  // Output
  publishDir = params.out_dir

  error_strategy = "finish"
  allowed_error_strategies = ["terminate", "finish", "ignore", "retry"]
  cleanup = false
  echo = false
  debug = false
}

cleanup = params.cleanup

process {
  errorStrategy = params.error_strategy
  echo = params.echo
  container = "xinglab/rmats:${params.rmats_version}"
}

dsl2 {
  enabled = true
  endpoint = "-"
}